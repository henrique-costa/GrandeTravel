@model UpdateProviderProfileVM

<div class="container margin-top margin-bottom margin-bottom">
    <div class="col-md-6 col-md-offset-3">
        <h1>Manage Profile</h1>
        <h5>Update your details</h5>


        <form asp-controller="Profile" asp-action="UpdateProviderProfile" method="post" role="form" asp-antiforgery="true">

            <div asp-validation-summary="ModelOnly">

            </div>                       

            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">PhoneNumber</label>
                <div>
                    <input class="form-control" asp-for="PhoneNumber">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div>
                <input type="submit" value="Save Changes" />
            </div>
        </form>
    </div>
</div>

