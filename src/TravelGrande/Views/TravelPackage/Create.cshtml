@{
}
@model CreateTravelPackageVM

<div class="container margin-top margin-bottom">
    <h1>Create a New Travel Package</h1>
    <form class="form-horizontal" form asp-controller="TravelPackage" asp-action="Create" method="post" role="form" asp-antiforgery="true" enctype="multipart/form-data">
        <fieldset>
            <legend>Package Info.</legend>
            <div class="form-group">
                <label asp-for="Name" class="col-lg-2 control-label">Package Name</label>
                <div class="col-lg-10">
                    <input class="form-control" asp-for="Name" placeholder="Eg. Sea Life Adventure">
                    <span asp-validation-for="Name" class="text-danger" ></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="col-lg-2 control-label">Location</label>
                <div class="col-lg-10">
                    <input class="form-control" asp-for="Location" placeholder="Eg. Sydney">
                    <span asp-validation-for="Location" class="text-danger"></span>

                </div>
            </div>

            <div class="form-group">
                <label asp-for="State" class="col-lg-2 control-label">State</label>
                <div class="col-lg-10">
                    <input class="form-control" asp-for="State" placeholder="Eg. NSW">
                    <span asp-validation-for="State" class="text-danger"></span>

                </div>
            </div>
            
            <div class="form-group">
                <label asp-for="Description" class="col-lg-2 control-label">Description</label>
                <div class="col-lg-10">
                    <textarea class="form-control descriptionTextArea" rows="3" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="col-lg-2 control-label">Price</label>
                <div class="col-lg-10">
                    <input class="form-control" asp-for="Price" placeholder="Eg. 399">
                    <span asp-validation-for="Price" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group">
                <label asp-for="PhotoPath" class="col-lg-2 control-label">Picture</label>
                <div class="col-lg-10">
                    <input class="form-control" asp-for="PhotoPath" type="file">
                    <span asp-validation-for="PhotoPath" class="text-danger"></span>

                </div>
            </div>
            <div>
                <input class="form-control hidden" asp-for="ProviderName" >
            </div>

            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="submit" class="btn btn-success">Submit</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-warning" role="button">Cancel</a>
                </div>
            </div>
        </fieldset>
    </form>
</div>
    
