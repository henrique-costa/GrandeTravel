@{
}
@model LoginVM


<div class="container margin-top margin-bottom ">
    <div class="col-md-6 col-md-offset-3">
        <h1>Login</h1>
        <h5>Insert your details</h5>
        <form asp-controller="Account" asp-action="Login" role="form" method="post" asp-route-returnurl="@Model.ReturnUrl" asp-anti-forgery="true">
            <div asp-validation-summary="ModelOnly">

            </div>
            

                

                <div class="form-group">
                    <label asp-for="Username" class="control-label">Username</label>
                    <div>
                        <input class="form-control" asp-for="Username">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label">Password</label>
                    <div>
                        <input class="form-control" asp-for="Password" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                </div>

                <div class="form-group">

                    <label asp-for="RememberMe">Remember me:</label>
                    <input asp-for="RememberMe" />
                    <span asp-validation-for="RememberMe"></span>

                </div>

                <div class="form-group">
                    <div>
                        <input type="submit" class="btn btn-success" value="Login" />
                        <a asp-controller="Home" asp-action="Index" class="btn btn-warning" role="button">Cancel</a>
                    </div>
                </div>
            
        </form>
    </div>
</div>

