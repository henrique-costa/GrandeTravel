@model CreateFeedbackVM
<div class="container margin-top margin-bottom">
    <div class="row">
        <div class="col-md-6">
            <h2>Leave a Feedback</h2>
            <form asp-controller="Feedback" asp-action="Create" method="post" role="form" asp-anti-forgery="true">
                
                <div class="form-group">
                    <label asp-for="Comment"></label>
                    <textarea asp-for="Comment" class="form-control"></textarea>
                    <span class="text-danger" asp-validation-for="Comment"></span>
                </div>

                <div>
                    <input type="hidden" asp-for="TravelPackageId" />
                </div>
                <div>
                    <input type="hidden" asp-for="BookingId" />
                </div>
                <div>
                    <input type="hidden" asp-for="CreatedOn" />
                </div>
                <button type="submit" class="btn btn-default">Leave Feedback</button>
            </form>
        </div>
    </div>
</div>
